{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/cjs",
    "declaration": false,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist","src/**/*.test.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}